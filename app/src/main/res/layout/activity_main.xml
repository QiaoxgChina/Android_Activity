<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qiaoxg.demoactivity.MainActivity">

    <Button
        android:id="@+id/lifeCircle_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Activity生命周期"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/startForResult_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="StartActivityForResult"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/orientationChange_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="横竖屏切换"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/transmitData_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Activity间传递数据"
        android:textAllCaps="false"/>
</LinearLayout>
